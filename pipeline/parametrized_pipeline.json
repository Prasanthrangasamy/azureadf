{
	"name": "parametrized_pipeline",
	"properties": {
		"activities": [
			{
				"name": "parametrize",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "parameter_dataset",
						"type": "DatasetReference",
						"parameters": {
							"DS_Container": {
								"value": "@pipeline().parameters.PP_Container",
								"type": "Expression"
							},
							"DS_Folder": {
								"value": "@pipeline().parameters.PP_Input_Folder",
								"type": "Expression"
							},
							"DS_Filename": {
								"value": "@pipeline().parameters.PP_Input_Filename",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "parameter_dataset",
						"type": "DatasetReference",
						"parameters": {
							"DS_Container": {
								"value": "@pipeline().parameters.PP_Container",
								"type": "Expression"
							},
							"DS_Folder": {
								"value": "@pipeline().parameters.PP_Output_Folder",
								"type": "Expression"
							},
							"DS_Filename": {
								"value": "@pipeline().parameters.PP_Output_Filename",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"PP_Container": {
				"type": "string"
			},
			"PP_Input_Folder": {
				"type": "string"
			},
			"PP_Input_Filename": {
				"type": "string"
			},
			"PP_Output_Filename": {
				"type": "string"
			},
			"PP_Output_Folder": {
				"type": "string"
			}
		},
		"annotations": []
	}
}